{
    "name": "cordova-android-sms-reader",
    "version": "0.0.2-dev",
    "displayName": "Cordova Android SMS Reader",
    "description": "Apache Cordova plugin that give access to the sms for Android",
    "main": "www/reader.js",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "declare": "tsc && rm -rf ./www/tsdist",
        "parcel-build": "parcel build ts/reader.ts -d www",
        "clean": "(rm -r www/* || true)",
        "build": "yarn clean &&  yarn parcel-build && yarn declare"
    },
    "keywords": [
        "ecosystem:cordova"
    ],
    "author": "Jérémy Fornarino (j4yf7o) For Ace",
    "license": "Apache-2.0",
    "dependencies": {
        "cordova-android": "^8.1.0",
        "parcel-bundler": "^1.12.4",
        "@types/cordova": "0.0.34",
        "typescript": "^3.9.3"
    },
    "devDependencies": {
        "cordova-plugin-whitelist": "^1.3.4"
    },
    "cordova": {
        "plugins": {
            "cordova-plugin-whitelist": {}
        },
        "platforms": [
            "android"
        ]
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/ace-design/cordova-android-sms-reader.git"
    },
    "bugs": {
        "url": "https://github.com/ace-design/cordova-android-sms-reader/issues"
    },
    "homepage": "https://github.com/ace-design/cordova-android-sms-reader#readme",
    "browserslist": [
        "last 1 Chrome versions"
    ]
}
